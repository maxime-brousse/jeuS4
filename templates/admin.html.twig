        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="{{ path('cartes_index') }}">Cartes</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('parties_index') }}">Parties</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('user_index') }}">Users</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('app_logout') }}">Déconnexion</a>
            </li>
        </ul>
    </div>
</nav>
{% block body %}{% endblock %}
{% block javascripts %}{% endblock %}
<footer>
    <div class="footer">
        <p class="pfooter">réalisé par l'agence Dcarte</p>
    </div>
</footer>
