{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<div class="content">
    <h1  class="contenth1">Utilisateur</h1>

    <table class="table table-striped table-borderede">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>speudonyme</th>
                <td>{{ user.userSpeudo }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>email</th>
                <td>{{ user.userEmail }}</td>
            </tr>
            <tr>
                <th>date de création</th>
                <td>{{ user.userDate ? user.userDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>derniére connexion</th>
                <td>{{ user.userDerniere ? user.userDerniere|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>nb de victoire</th>
                <td>{{ user.userWin }}</td>
            </tr>
            <tr>
                <th>nb de défaite</th>
                <td>{{ user.userLoose }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_index') }}"><button class="btn btn-secondary btn-lg">retour aux utilisateurs</button></a>

    <a href="{{ path('user_edit', {'id': user.id}) }}"><button class="btn btn-secondary btn-lg">éditer la sélection</button></a>

    {{ include('admin/user/_delete_form.html.twig') }}
{% endblock %}
