{% extends 'admin.html.twig' %}

{% block title %}Cartes | liste{% endblock %}

{% block body %}
    <div class="content">
        <h1 class="contenth1">gestion des cartes</h1>
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col" >Id de la carte</th>
                    <th scope="col" >Nom de la carte</th>
                    <th scope="col" >Métier de la carte</th>
                    <th scope="col" >Force de la carte</th>
                    <th scope="col" >Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for carte in cartes %}
                <tr scope="row">
                    <td>{{ carte.id }}</td>
                    <td>{{ carte.carteNom }}</td>
                    <td>{{ carte.carteMetier }}</td>
                    <td>{{ carte.carteForce }}</td>
                    <td>
                        <a href="{{ path('cartes_show', {'id': carte.id}) }}">Voir</a> |
                        <a href="{{ path('cartes_edit', {'id': carte.id}) }}">Éditer</a>
                    </td>
                </tr>
            {% else %}
                <tr scope="row">
                    <td colspan="5">pas d'entrée</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('cartes_new') }}"><button class="btn btn-secondary btn-lg btn-block">nouvelle entrée</button></a>
    </div>
{% endblock %}
