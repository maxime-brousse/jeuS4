{% extends 'admin.html.twig' %}

{% block title %}Carte | montrer{% endblock %}

{% block body %}
    <div class="content">
        <h1 class="contenth1">Cartes</h1>
        <table class="table table-striped table-bordered">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ carte.id }}</td>
                </tr>
                <tr>
                    <th>Nom de la carte</th>
                    <td>{{ carte.carteNom }}</td>
                </tr>
                <tr>
                    <th>Métier de la carte</th>
                    <td>{{ carte.carteMetier }}</td>
                </tr>
                <tr>
                    <th>Force de la carte</th>
                    <td>{{ carte.carteForce }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('cartes_index') }}"><button class="btn btn-secondary btn-lg">retour aux cartes</button></a>

        <a href="{{ path('cartes_edit', {'id': carte.id}) }}"><button class="btn btn-secondary btn-lg">éditer la sélection</button></a>

        {{ include('admin/cartes/_delete_form.html.twig') }}
    </div>
{% endblock %}
