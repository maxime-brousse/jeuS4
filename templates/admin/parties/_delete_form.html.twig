<form method="post" action="{{ path('parties_delete', {'id': party.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ party.id) }}">
    <button class="btn btn-secondary btn-lg">Delete</button>
</form>
