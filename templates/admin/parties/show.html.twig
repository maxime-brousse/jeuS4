{% extends 'admin.html.twig' %}

{% block title %}Partie | montrer{% endblock %}

{% block body %}
    <div class="content">
        <h1 class="contenth1">Parties</h1>
        <table class="table table-striped table-borderede">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ party.id }}</td>
                </tr>
                <tr>
                    <th>statut de la partie</th>
                    <td>{{ party.partieStatut ? 'Yes' : 'No' }}</td>
                </tr>
                <tr>
                    <th>tour du joueur</th>
                    <td>{{ party.partieTourde ? 'Yes' : 'No' }}</td>
                </tr>
                <tr>
                    <th>dé sauvegardé</th>
                    <td>{{ party.partieDe ? party.partieDe|json_encode : '' }}</td>
                </tr>
                <tr>
                    <th>terrain</th>
                    <td>{{ party.partieTerrain ? party.partieTerrain|json_encode : '' }}</td>
                </tr>
                <tr>
                    <th>type de victoire</th>
                    <td>{{ party.partieTypeV }}</td>
                </tr>
                <tr>
                    <th>nom joueur 2</th>
                    <td>{{ party.partieJ2 }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('parties_index') }}"><button class="btn btn-secondary btn-lg">retour aux cartes</button></a>

        <a href="{{ path('parties_edit', {'id': party.id}) }}"><button class="btn btn-secondary btn-lg">éditer la sélection</button></a>

        {{ include('admin/parties/_delete_form.html.twig') }}
    </div>
{% endblock %}
