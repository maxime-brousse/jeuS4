{% extends 'admin.html.twig' %}

{% block title %}Partie | liste{% endblock %}

{% block body %}
    <div class="content">
        <h1 class="contenth1">gestion des parties</h1>
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">numéro de la partie</th>
                    <th scope="col">état de la partie</th>
                    <th scope="col">tour du joueur</th>
                    <th scope="col">dé du tour</th>
                    <th scope="col">position des cartes</th>
                    <th scope="col">type de victoire</th>
                    <th scope="col">joueur 2</th>
                    <th scope="col">actions</th>
                </tr>
            </thead>
            <tbody>
            {% for party in parties %}
                <tr scope="row">
                    <td>{{ party.id }}</td>
                    <td>{{ party.partieStatut ? 'Yes' : 'No' }}</td>
                    <td>{{ party.partieTourde ? 'Yes' : 'No' }}</td>
                    <td>{{ party.partieDe ? party.partieDe|json_encode : '' }}</td>
                    <td>{{ party.partieTerrain ? party.partieTerrain|json_encode : '' }}</td>
                    <td>{{ party.partieTypeV }}</td>
                    <td>{{ party.partieJ2 }}</td>
                    <td>
                        <a href="{{ path('parties_show', {'id': party.id}) }}">voir</a> |
                        <a href="{{ path('parties_edit', {'id': party.id}) }}">éditer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">pas d'entrée</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('parties_new') }}"><button class="btn btn-secondary btn-lg btn-block">nouvelle entrée</button></a>
    </div>
{% endblock %}
